<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiwayatPenyakitUpdate">

  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:id="@+id/pic_place"
          android:layout_width="107dp"
          android:layout_height="107dp"
          android:layout_marginTop="150dp"
          android:layout_centerHorizontal="true"
          app:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_person_24"/>
      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/title_tanggallahir"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:textColor="@color/black"
          android:text="Tanggal Lahir"
          android:textSize="16dp"
          android:layout_marginLeft="63dp"
          android:layout_marginTop="17dp"
          android:textStyle="bold"
          android:layout_below="@+id/pic_place" />

      <LinearLayout
          android:id="@+id/et_tanggallahir"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/title_tanggallahir"
          android:orientation="vertical"
          android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/et_mod1"
            />

        <EditText
            android:id="@+id/edit_tgl_lahir_update"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="-40dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:hint="Masukan Tanggal Lahir Anda"
            android:textColorHint="#CBC6C6"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="date"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/title_golongandarah"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:textColor="@color/black"
          android:text="Golongan Darah"
          android:textSize="16dp"
          android:layout_marginLeft="63dp"
          android:layout_marginTop="17dp"
          android:textStyle="bold"
          android:layout_below="@+id/et_tanggallahir" />

      <LinearLayout
          android:id="@+id/et_golongandarah"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/title_golongandarah"
          android:orientation="vertical"
          android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/et_mod1"
            />

        <EditText
            android:id="@+id/edit_gol_darah_update"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="-40dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:hint="Masukan Golongan Darah Anda"
            android:textColorHint="#CBC6C6"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/title_riwayatpenyakit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:textColor="@color/black"
          android:text="Riwayat Penyakit"
          android:textSize="16dp"
          android:layout_marginLeft="63dp"
          android:layout_marginTop="17dp"
          android:textStyle="bold"
          android:layout_below="@+id/et_golongandarah" />

      <LinearLayout
          android:id="@+id/et_riwayatpenyakit"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_marginTop="5dp"
          android:layout_below="@+id/title_riwayatpenyakit"
          android:orientation="vertical"
          android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/et_mod2"
            />

        <EditText
            android:id="@+id/edit_riwayat_penyakit_update"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginTop="-70dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:hint="Masukan Riwayat Penyakit Anda"
            android:textColorHint="#CBC6C6"
            android:textSize="14sp"
            android:maxLines="3"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:scrollbarSize="80dp"/>
      </LinearLayout>

      <Button
          android:id="@+id/btn_updatePenyakit"
          android:layout_width="300dp"
          android:layout_height="80dp"
          android:layout_below="@+id/et_riwayatpenyakit"
          android:layout_centerInParent="true"
          android:layout_marginTop="10dp"
          android:background="@drawable/btn_mod2"
          android:text="Simpan"
          android:textColor="#FFFFFF"></Button>

      <View
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="9dp"
          android:background="@color/white"
          android:layout_below="@+id/btn_updatePenyakit"/>

    </RelativeLayout>
  </ScrollView>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:src="@drawable/top_view">
    </ImageView>

    <ImageButton
        android:id="@+id/btn_back5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/arrow_left">
    </ImageButton>

    <TextView
        android:id="@+id/title_profilsaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/btn_back5"
        android:text="Riwayat Penyakit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="29dp" />
  </RelativeLayout>

</RelativeLayout>