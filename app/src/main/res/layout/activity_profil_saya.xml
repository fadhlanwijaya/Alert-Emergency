<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilSaya">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/pic_place"
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_person_24"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="Nama"
                android:textSize="16dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:layout_below="@+id/pic_place" />

            <LinearLayout
                android:id="@+id/et_nama"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/nama"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_mod2"
                    />

                <EditText
                    android:id="@+id/editUserNama"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="-57dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="Masukkan Nama Anda"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="textPersonName"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="Email"
                android:textSize="16dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:layout_below="@+id/et_nama" />

            <LinearLayout
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/email"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_mod2"
                    />

                <EditText
                    android:id="@+id/editUserEmail"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="-57dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="Masukkan Email Anda"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="Nomor Telepon"
                android:textSize="16dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:layout_below="@+id/et_email" />

            <LinearLayout
                android:id="@+id/et_telepon"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/telepon"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_mod2"
                    />

                <EditText
                    android:id="@+id/editUserNomor"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="-57dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="Masukkan Nomor Telepon Anda"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="phone"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/pesan_darurat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="Pesan Darurat"
                android:textSize="16dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:layout_below="@+id/et_telepon" />

            <LinearLayout
                android:id="@+id/et_pesan_darurat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/pesan_darurat"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_mod2"
                    />

                <EditText
                    android:id="@+id/editUserPesan"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="-57dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="Masukkan Pesan Darurat Anda"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="textLongMessage"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_simpan1"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_below="@+id/et_pesan_darurat"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_mod2"
                android:text="Simpan"
                android:textColor="#FFFFFF">
            </Button>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/white"
                android:layout_below="@+id/btn_simpan1"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:src="@drawable/top_view">
        </ImageView>

        <ImageButton
            android:id="@+id/btn_back3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_left">
        </ImageButton>

        <TextView
            android:id="@+id/title_profilsaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/btn_back3"
            android:text="Profil Saya"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="29dp" />
    </RelativeLayout>

</RelativeLayout>