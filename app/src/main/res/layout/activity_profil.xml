<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Atas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="36dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/pic_place"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/Atas"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_person_24"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nama_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Atas"
                android:text="User Baru"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="130dp"
                android:textColor="@color/light_black"
                />

            <TextView
                android:id="@+id/nomor_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Atas"
                android:text="0812-0208-9914"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="130dp"
                android:textColor="@color/light_grey"
                />

            <View
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/pic_place"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/profil_saya"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/pic_place">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_profil_saya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/icon_profil_saya"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Profil Saya"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icon_profil_saya"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/profil_saya"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/riwayat_panggilan"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/profil_saya">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_riwayat_panggilan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icon_riwayat_panggilan"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Riwayat Panggilan"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icon_riwayat_panggilan"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/riwayat_panggilan"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/riwayat_penyakit"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/riwayat_panggilan">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_riwayat_penyakit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icon_riwayat_penyakit"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Riwayat Penyakit"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icon_riwayat_penyakit"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="#D9D9D9"
                android:layout_below="@+id/riwayat_penyakit"/>

            <TextView
                android:id="@+id/tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="43dp"
                android:layout_below="@+id/riwayat_penyakit"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/syarat_ketentuan"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tentang">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_syarat_ketentuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icon_syarat_ketentuan"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Syarat dan Ketentuan"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icon_syarat_ketentuan"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/syarat_ketentuan"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/kebijakan_privasi"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/syarat_ketentuan">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_kebijakan_privasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icon_kebijakan_privasi"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Kebijakan Privasi"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icon_kebijakan_privasi"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/kebijakan_privasi"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/panduan_alert"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/kebijakan_privasi">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_panduan_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icon_panduan_alert"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Panduan Alert!"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/icon_panduan_alert"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="#D9D9D9"
                android:layout_below="@+id/panduan_alert"/>

            <TextView
                android:id="@+id/app_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versi 1.0"
                android:textSize="10dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="43dp"
                android:layout_below="@+id/panduan_alert"/>

            <Button
                android:id="@+id/signout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:text="Sign Out"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_mod2"
                android:layout_below="@id/app_ver">
            </Button>

            <View
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#D9D9D9"
                android:layout_below="@+id/signout"/>

        </RelativeLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_sos"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="570dp"
            android:background="@drawable/sos_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottom_navigation"
            app:itemBackground="@color/white"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/menu_navigation" />
    </LinearLayout>

</RelativeLayout>